package network;

public class WeatherAccess {
	
	public static void getCurrentWeatherDataByName(String cityName) {
		NetworkConnect.getData(Requests.requestCurrentWeatherByName(cityName));
	}
	
	public static void getCurrentWeatherDataByZip(int zipCode, String countryCode) {
		NetworkConnect.getData(Requests.requestCurrentWeatherByZip(zipCode, countryCodes));
	}
}
