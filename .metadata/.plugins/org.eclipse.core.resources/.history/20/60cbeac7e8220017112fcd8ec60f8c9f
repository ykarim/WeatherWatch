package network;

import org.apache.http.client.methods.HttpGet;

public class Requests {
	
	private final static String API_KEY = "&APPID=26b5c08cd8788979f3977188af39c4b0";
	private final static String URL = "http://api.openweathermap.org/data/2.5/";
	
	public static HttpGet requestCurrentWeatherByName(String cityName) {
		return new HttpGet(URL + "weather?" + "q=" + cityName + API_KEY);
	}
	
	public static HttpGet requestCurrentWeatherByZip(int zipCode, String countryCode) {
		return new HttpGet(new String(URL + "weather?" + "zip=" + zipCode + "," + countryCode + API_KEY));
	}
}
